{
    "version": 2,
    "builds": [
        {
            "src": "server.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "maxDuration": 55
            },
            "maxDuration": 55
        }
    ],
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/server.py"
        }
    ],
    "headers": [
        {
            "source": "/summarize",
            "headers": [
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                },
                {
                    "key": "Access-Control-Allow-Methods",
                    "value": "GET, POST, OPTIONS"
                },
                {
                    "key": "Access-Control-Allow-Headers",
                    "value": "Content-Type, Authorization"
                },
                {
                    "key": "Access-Control-Max-Age",
                    "value": "3600"
                }
            ]
        }
    ]
}